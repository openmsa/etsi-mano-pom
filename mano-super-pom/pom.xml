<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.1.0</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>
	<groupId>com.ubiqube.mano</groupId>
	<artifactId>mano-super-pom</artifactId>
	<version>3.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>mano-super-pom</name>
	<description>ETSI-MANO super pom</description>
	<scm>
		<developerConnection>scm:git:https://github.com/openmsa/etsi-mano-java.git</developerConnection>
	</scm>
	<distributionManagement>
		<snapshotRepository>
			<id>nexus-snapshots</id>
			<url>http://nexus.ubiqube.com/repository/maven-snapshots/</url>
		</snapshotRepository>
		<repository>
			<id>nexus-releases</id>
			<url>http://nexus.ubiqube.com/repository/maven-releases/</url>
		</repository>
	</distributionManagement>

	<properties>
		<java.version>17</java.version>
		<maven.compiler.target>17</maven.compiler.target>
		<maven.compiler.source>17</maven.compiler.source>
		<m2e.apt.activation>jdt_apt</m2e.apt.activation>
		<com.ubiqube.hibernate-search.version>5.11.12.Final</com.ubiqube.hibernate-search.version>
		<com.ubiqube.hibernate-search6.version>6.1.8.Final</com.ubiqube.hibernate-search6.version>
		<com.ubiqube.openstack4j.version>3.11</com.ubiqube.openstack4j.version>
		<com.ubiqube.swagger3>2.2.8</com.ubiqube.swagger3>
		<com.ubiqube.mockito.version>5.3.0</com.ubiqube.mockito.version>
		<com.ubiqube.elasticsearch.version>8.6.2</com.ubiqube.elasticsearch.version>
		<com.ubiqube.springdoc.version>2.1.0</com.ubiqube.springdoc.version>
		<com.ubiqube.orika.version>1.5.5</com.ubiqube.orika.version>
		<com.ubiqube.jgrapht.version>1.5.1</com.ubiqube.jgrapht.version>
		<brave.version>5.16.0</brave.version>
	</properties>
	<dependencyManagement>
		<dependencies>
			<dependency>
